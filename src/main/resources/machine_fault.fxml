<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane prefWidth="400.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.csci6461.team13.simulator.ui.controllers.MachineFaultController">
   <header>
      <Label alignment="CENTER" text="Machine Fault">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </header>
   <content>
      <VBox>
         <children>
            <HBox>
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="80.0" text="Code:">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="mfCode" text="N/A" wrapText="true" HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="80.0" text="Message:">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </Label>
                  <TextArea fx:id="mfMsg" editable="false" prefHeight="100.0" prefWidth="200.0" promptText="N/A" wrapText="true" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="mfOK" cancelButton="true" mnemonicParsing="false" prefWidth="100.0" styleClass="danger" text="OK" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </content>
   <padding>
      <Insets left="30.0" right="30.0" top="50.0" />
   </padding>
</DialogPane>
